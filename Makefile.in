VPATH=%VPATH%

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:	librustgeom.dummy

%.o:	%.c
	$(CC) $< -o $@ -c $(CFLAGS)

librustgeom.dummy: geom.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@
	touch $@

rustgeom-test: geom.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: rustgeom-test
	./rustgeom-test

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test

